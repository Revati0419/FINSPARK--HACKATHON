{
  "manifest_version": 3,
  "name": "Web Assistant",
  "version": "1.0",
  "description": "A browser extension for on-page translation, AI assistance, and more.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "Web Assistant"
  },
  "host_permissions": [
    "http://127.0.0.1:5001/*",
    "https://generativelanguage.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "utils/translator.js",
        "content_script.js"
      ],
      "css": [
        "injected_ui/styles.css",
        "injected_ui/ai-chat.css",
        "injected_ui/settings.css",
        "injected_ui/features.css"
        
      ]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}