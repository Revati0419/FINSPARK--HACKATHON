{
  "manifest_version": 3,
  "name": "BuddhiBot Extension",
  "version": "1.0",
  "description": "A browser extension for on-page translation, AI assistance, and more.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "BuddhiBot"
  },
  "host_permissions": [
    "http://127.0.0.1:5001/*",
    "https://*.googleapis.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        
        "bundle.js"
      ],
      "css": [
        
        "injected_ui/styles.css",
        "injected_ui/ai-chat.css",
        "injected_ui/settings.css",
        "injected_ui/features.css",
        "injected_ui/ai_panel.css"
      ]
    }
  ],
  "icons": {
    "128": "icon.png"
  }
}